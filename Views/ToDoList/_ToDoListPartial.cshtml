@using ToDoList.Models.ToDoListModels;

@model List<ToDoListItem>

@if (Model.Any())

{
    <div class="list-group">
        @foreach (var item in Model)

        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input me-2" id="@item.Id" @(item.IsCompleted ? "checked" : "") onchange="toggleCompletion(@item.Id)">
                    <label class="form-check-label" for="@item.Id">
                        @item.Title
                        @if (item.IsCompleted)
                        {
                            <span class="text-success me-2">
                                <i class="bi bi-check-circle" style="font-size: 1rem;"></i>
                            </span>
                        }
                    </label>
                </div>
                <button class="btn btn-danger btn-sm" onclick="deleteTask(@item.Id)">Delete</button>
            </div>
        }
    </div>
}

else

{
    <div class="alert alert-info text-center">
        No tasks available
    </div>
}
